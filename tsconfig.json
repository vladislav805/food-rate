{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "esnext",
        "jsx": "react",
        "sourceMap": true,
        "strict": true,
        "lib": ["es6", "es7", "es2020", "DOM"],
        "noImplicitReturns": false,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "baseUrl": "src",
        "paths": {
            "@server/*": ["server/*"],
            "@database": ["server/database"],
            "@database/*": ["server/database/*"],
            "@utils/*": ["utils/*", "frontend/utils/*"],
            "@typings": ["typings"],
            "@typings/*": ["typings/*"],
            "@frontend/*": ["frontend/*"],
            "@components/*": ["frontend/components/*"],
            "@pages/*": ["frontend/pages/*"],
            "%config": ["config.ts"],
            "@external/*": ["external/*"]
        },
        "types": ["node"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/*",
        "src/tests/*"
    ],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}